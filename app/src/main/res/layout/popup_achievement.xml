<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:layout_width="375dp"
    android:layout_height="375dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_border">

    <ImageView
        android:id="@+id/trophy"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/trophy" />

    <TextView
        android:id="@+id/achievementUnlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trophy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/ach_unlocked"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/achievmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievementUnlocked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/achievement_name"
        android:textColor="@color/purple_700"
        android:textSize="26sp" />

    <Button
        android:id="@+id/popup_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achievmentName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:text="@string/ok" />
</RelativeLayout>