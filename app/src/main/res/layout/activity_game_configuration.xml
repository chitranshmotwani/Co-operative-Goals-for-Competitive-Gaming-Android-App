<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="@drawable/space_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".GameConfigurationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/poor_score_text"
            android:layout_width="143dp"
            android:layout_height="21dp"
            android:layout_marginEnd="57dp"
            android:text="@string/poor_score_hint"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/great_score_text"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poor_score" />

        <TextView
            android:id="@+id/achievement_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/players"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/num_players"
            app:layout_constraintTop_toBottomOf="@+id/great_score_text" />

        <Button
            android:id="@+id/all_games_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/yellow"
            android:onClick="goToGamesList"
            android:text="@string/all_games"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barChart" />

        <EditText
            android:id="@+id/poor_score"
            android:layout_width="124dp"
            android:layout_height="50dp"
            android:layout_marginStart="44dp"
            android:ems="10"
            android:hint="@string/poor_score_hint"
            android:inputType="number"
            android:scrollHorizontally="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#6FFFEB3B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expected_score_title" />

        <EditText
            android:id="@+id/great_score"
            android:layout_width="124dp"
            android:layout_height="50dp"
            android:layout_marginStart="77dp"
            android:ems="10"
            android:hint="@string/great_score_hint"
            android:inputType="number"
            android:scrollHorizontally="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#6FFFEB3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/poor_score"
            app:layout_constraintTop_toBottomOf="@+id/expected_score_title" />

        <TextView
            android:id="@+id/great_score_text"
            android:layout_width="143dp"
            android:layout_height="21dp"
            android:layout_marginEnd="36dp"
            android:text="@string/great_score_hint"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/great_score" />

        <EditText
            android:id="@+id/num_players"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="@string/_0"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#6FFFEB3B"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/achievement_title_1"
            app:layout_constraintTop_toBottomOf="@+id/great_score_text" />

        <EditText
            android:id="@+id/game_config_name"
            android:layout_width="235dp"
            android:layout_height="47dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/game_config_name_hint"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#6FFFEB3B"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/expected_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/expected_scores_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#6FFFEB3B"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_description" />

        <EditText
            android:id="@+id/score_description"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:hint="@string/score_description_hint"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#6FFFEB3B"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_config_name" />

        <ListView
            android:id="@+id/achievement_list"
            android:layout_width="372dp"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:background="#000000"
            android:divider="@android:drawable/bottom_bar"
            android:dividerHeight="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/achievement_title_1" />

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/yellow"
            android:onClick="goToNewGame"
            android:text="@string/new_game"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/all_games_button"
            app:layout_constraintTop_toBottomOf="@+id/barChart" />

        <TextView
            android:id="@+id/achievement_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:text="@string/minimum_score_for"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poor_score_text" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="372dp"
            android:layout_height="53dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/achievement_stat_title" />

        <TextView
            android:id="@+id/achievement_stat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Achievement Statistics"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/achievement_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>